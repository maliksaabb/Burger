 <center>
    <img src="https://cdn.dribbble.com/users/539024/screenshots/6142362/burger-dribble.gif" style="max-width: 200px; background-color:lightcoral"><br>
    BURGER BURGER!
</center>
<br><br>
 <div class ="col-md-4">
      <form action="/burgers/create" method="POST">
      <div class="col-md-11 col-md-offset-1 text-center" style="margin-top:15px">
          <label for="burger" style="color: maroon; font-family: 'Comic Sans MS', cursive, sans-serif">Order Your Burger!</label>
          <input type ="text" name="burger_name" class="form-control" value="" id="enter_text">
          <button type="submit" class="btn btn-primary" style="background-color:brown" id="text-enter-button">Submit</button>
      </div>
      </form>
</div>
<div class="col-md-4">
  <center>Menu
        {{#each burger_data}}
            {{#unless this.devoured}}
          <pre>{{this.id}}. {{this.burger_name}}</pre>
        <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
          <input type="hidden" name="burger_id" type="text" value={{this.id}}>
          <button type="submit" class="btn btn-default">Devour It!</button><br>
        </form>
            {{/unless}}
        {{/each}}
  </center>
</div>
<div class="col-md-4">
  <center>Devoured Burgers
      {{#each burger_data}}
          {{#if this.devoured}}
              <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
          {{/if}}
      {{/each}}
  </center>
</div>